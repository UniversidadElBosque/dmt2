<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="juan.example.com.diabetest2.profesional.CrearPaciente">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="525dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:layout_x="36dp"
        android:layout_y="52dp"
        android:text="Todos los usuarios deben contar con profesional de la salud que les brinde apoyo, por tanto el paciente quedará asociado a su cuenta como profesional de la salud."
        android:textAlignment="center"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="32dp"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="22dp"
        android:layout_x="111dp"
        android:layout_y="18dp"
        android:text="Registro de Paciente"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="39dp" />

    <EditText
        android:id="@+id/id_correoPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id_identificacionPa"
        android:layout_alignLeft="@+id/id_identificacionPa"
        android:layout_alignStart="@+id/id_identificacionPa"
        android:layout_marginBottom="18dp"
        android:layout_x="182dp"
        android:layout_y="138dp"
        android:ems="10"
        android:hint="Correo del paciente"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/id_identificacionPa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_x="182dp"
        android:layout_y="184dp"
        android:ems="10"
        android:hint="Identificación de paciente"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="279dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:layout_x="249dp"
        android:layout_y="244dp"
        android:onClick="procesar"
        android:text="Crear"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="350dp" />
</AbsoluteLayout>
