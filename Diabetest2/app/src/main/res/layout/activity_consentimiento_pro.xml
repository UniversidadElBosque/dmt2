<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="juan.example.com.diabetest2.profesional.ConsentimientoPro">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView120"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Consentimiento informado"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/negro"
                    android:textSize="18sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/textView91"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usted ha sido invitado(a) a participar como profesional en el estudio de “Un App móvil para el apoyo al tratamiento de la diabetes mellitus tipo 2”, entiendo que mi participación consistirá en interactuar con pacientes de forma responsable, generar contenidos de apoyo al tratamiento de la dmt2 y a utilizar las herramientas que ofrece esta App para el propósito mencionado. Entiendo este Consentimiento Informado o el mismo se me ha leído o explicado, todas mis preguntas han sido contestadas claramente y he tenido el tiempo suficiente para pensar acerca de mi decisión, no tengo ninguna duda sobre mi participación, por lo que estoy de acuerdo en hacer parte de esta investigación. Autorizo el uso y la divulgación de mi información a los responsables de esta App, sus creadores y la Universidad El Bosque, para los propósitos descritos anteriormente, acepto voluntariamente participar sin renunciar a ninguno de mis derechos legales."
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBox_consentimientoPro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acepto"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/button26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="procesar"
                android:text="Continuar"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
